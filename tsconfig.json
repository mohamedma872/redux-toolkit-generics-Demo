{
  "compilerOptions": {
    "target": "ES6",                           // Specify ECMAScript target version (e.g., 'ES5', 'ES6')
    "module": "commonjs",                      // Specify module code generation
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Enable import/export interop between CommonJS and ES Modules
    "skipLibCheck": true,                      // Skip type checking for declaration files
    "allowJs": true,                           // Allow JavaScript files to be compiled
    "jsx": "react-native",                     // Specify JSX code generation: 'react-native' or 'react'
    "moduleResolution": "node",                // Resolve modules using Node.js style
    "baseUrl": ".",                            // Set the base URL for module resolution
    "paths": {
      "@/*": ["src/*"]                         // Example: Aliasing to simplify imports
    },
    "noEmit": true,                            // Do not emit output files
    "resolveJsonModule": true                  // Allow importing JSON modules
  },
  "exclude": [
    "node_modules",                            // Exclude unnecessary directories
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*"                                 // Include all TypeScript files under 'src/'
  ]
}
